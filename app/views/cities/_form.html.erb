<div class="row">
  <div class="col-xs-12">
    <%= form_tag city_path, method: 'get', class: 'form-inline' do %>
      <div class="form-group">
        <%= label_tag :country %>
        <%= text_field_tag :country, params[:country], class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :city %>
        <%= text_field_tag :city, params[:city], class: 'form-control' %>
      </div>
      <%= submit_tag "Search", class: "btn btn-default" %>
    <% end %>
  </div>
</div>
<br />